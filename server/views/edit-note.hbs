<h1>Edit {{title}}</h1>

<div>
<h2>edit note: <span class="data">{{note.name}}</span></h2>

<form method="POST" action="/edit" class="form">
  <input type="hidden" name="id" value="{{note.id}}">

  <label for="name">Note name</label>
  <input type="text" id="name" name="name" placeholder="name" value="{{note.name}}">
  
  <label for="details">Details</label>
  <textarea rows="4" id="details" name="details" placeholder="details">{{note.details}}</textarea>
  
  <div></div>
  <button>Update note</button>
</form>
</div>